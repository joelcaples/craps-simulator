<Window x:Class="caps_simulator.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:caps_simulator.wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" Margin="10" LastChildFill="True">

            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Height="50" 
                VerticalAlignment="Bottom" 
                DockPanel.Dock="Bottom">

                <Button 
                Name="btnGo" 
                BorderBrush="Black" 
                BorderThickness="1" 
                Click="OnGo" 
                ClickMode="Press"
                Width="100"
                Height="25"
                Margin="5">
                    Go!
                </Button>

                <Button 
                Name="btnClear" 
                BorderBrush="Black" 
                BorderThickness="1" 
                Click="OnClear" 
                ClickMode="Press"
                Width="100"
                Height="25"
                Margin="5">
                    Clear
                </Button>
            </StackPanel>

            <ListView Margin="10,10,0,13" Name="MsgList" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" DockPanel.Dock="Top">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="TimeStamp" Width="150" DisplayMemberBinding="{Binding TimeStamp}" />
                        <GridViewColumn Header="Roll" Width="50" DisplayMemberBinding="{Binding DiceRoll}" />
                        <GridViewColumn Header="Message" Width="150" DisplayMemberBinding="{Binding MsgText}" />
                    </GridView>
                </ListView.View>
            </ListView>

            

        </DockPanel>
    </Grid>
</Window>
